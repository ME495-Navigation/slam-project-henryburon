<launch>

    <include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
        <arg name="use_rviz" value="false" />
        <arg name="color" value="purple"/>
    </include>

    <include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
        <arg name="use_rviz" value="false" />
        <arg name="color" value="red"/>
    </include>

    <include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
        <arg name="use_rviz" value="false" />
        <arg name="color" value="green"/>
    </include>

    <include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
        <arg name="use_rviz" value="false" />
        <arg name="color" value="blue"/>
    </include>

    <!-- Modify this so it terminates the launch file when rviz is closed. -->
    <node pkg="rviz2" exec="rviz2"
        args="-d $(find-pkg-share nuturtle_description)/config/basic_all.rviz" />

    <node pkg="tf2_ros" exec="static_transform_publisher" name="nusim_red" args="0.3 0 0 0 0 0 nusim/world red/base_footprint" />
    <node pkg="tf2_ros" exec="static_transform_publisher" name="nusim_green" args="0 0.6 0 0 0 0 nusim/world green/base_footprint" />
    <node pkg="tf2_ros" exec="static_transform_publisher" name="nusim_blue" args="-0.71 0 0 0 0 0 nusim/world blue/base_footprint" />
    <node pkg="tf2_ros" exec="static_transform_publisher" name="nusim_purple" args="0 -0.9 0 0 0 0 nusim/world purple/base_footprint" />

</launch>


